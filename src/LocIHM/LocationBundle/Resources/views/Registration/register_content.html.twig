{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form 'LocIHMLocationBundle:Form:fields.html.twig' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    
    {{ form_start(form) }}

    {{ form_errors(form) }}


    <fieldset>
    	<legend>Parlons de vous</legend>
	    <div class="row">
	    	<div class="small-12 columns">
	    		{{ form_label(form.nom, 'Nom'|trans) }}
	    		{{ form_widget(form.nom) }}
	    		{{ form_errors(form.nom) }}
	    	</div>
	    </div>

	    <div class="row">
	    	<div class="small-12 columns">
	    		{{ form_label(form.prenom, 'Prénom'|trans) }}
	    		{{ form_widget(form.prenom) }}
	    		{{ form_errors(form.prenom) }}
	    	</div>
	    </div>

	    <div class="row">
	    	<div class="small-12 columns">
	    		{{ form_label(form.dateNaissance, 'Date de Naissance'|trans) }}
	    		{{ form_widget(form.dateNaissance, {'attr' : { 'placeholder' : 'dd-mm-yyyy'}}) }}
	    		{{ form_errors(form.dateNaissance) }}
	    	</div>
	    </div>

	    <div class="row">
	    	<div class="small-12 columns">
	    		{{ form_label(form.adresse, 'Adresse'|trans) }}
	    		{{ form_widget(form.adresse) }}
	    		{{ form_errors(form.adresse) }}
	    	</div>
	    </div>

	    <div class="row">
	    	<div class="small-12 columns">
	    		{{ form_label(form.tel1, 'Téléphone'|trans) }}
	    		{{ form_widget(form.tel1) }}
	    		{{ form_errors(form.tel1) }}
	    	</div>
	    </div>

	    <div class="row">
	    	<div class="small-12 columns">
	    		{{ form_label(form.tel2, 'Portable'|trans) }}
	    		{{ form_widget(form.tel2) }}
	    		{{ form_errors(form.tel2) }}
	    	</div>
	    </div>

	    <div class="row">
	    	<div class="small-12 columns">
	    		{{ form_label(form.email, 'Email'|trans) }}
	    		{{ form_widget(form.email) }}
	    		{{ form_errors(form.email) }}
	    	</div>
	    </div>
	</fieldset>

	<fieldset>
		<legend>Votre compte</legend>

		<div class="row">
	    	<div class="small-12 columns">
	    		{{ form_label(form.username, 'Nom dutilisateur'|trans) }}
	    		{{ form_widget(form.username) }}
	    		{{ form_errors(form.username) }}
	    	</div>
	    </div>

	    <div class="row">
	    	<div class="small-12 columns">
	    		{{ form_label(form.plainPassword, 'Identification'|trans) }}
	    		{{ form_widget(form.plainPassword) }}
	    		{{ form_errors(form.plainPassword) }}
	    	</div>
	    </div>
	</fieldset>

	{{ form_rest(form) }}

    <div class="row">
    	<div class="small-12 columns">
        	<input type="submit" value="{{ 'registration.submit'|trans }}" class="button expand"/>
        </div>
    </div>

    {{ form_end(form) }}
</form>

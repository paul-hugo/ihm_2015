{% extends 'LocIHMLocationBundle:Admin:layout.html.twig' %}

{% block corps -%}
    
    <!-- Header -->
    <div class="row">
        <div class="small-12 columns">
          <h1> {{'titre.vehicule.show'|trans|title}} </h1>
        </div>
    </div>

    <div class="row">
        <div class="small-12 columns">
            <table>
                <tbody>
                    <tr>
                        <th>{{'word.table.id'|trans|title}}</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>{{'word.table.vehicule.marque'|trans|title}}</th>
                        <td>{{ entity.marque }}</td>
                    </tr>
                    <tr>
                        <th>{{'word.table.vehicule.modele'|trans|title}}</th>
                        <td>{{ entity.modele }}</td>
                    </tr>
                    <tr>
                        <th>{{'word.table.vehicule.puissance'|trans|title}}</th>
                        <td>{{ entity.puissance }}</td>
                    </tr>
                    <tr>
                        <th>{{'word.table.vehicule.couleur'|trans|title}}</th>
                        <td>{{ entity.couleur }}</td>
                    </tr>
                    <tr>
                        <th>{{'word.table.vehicule.prixjournalier'|trans|title}}</th>
                        <td>{{ entity.prixJournalier }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="small-12 columns">
            {{ form_start(delete_form) }}
            {{ form_errors(delete_form) }}
            {{ form_widget(delete_form.submit, { 'label': 'form.delete'|trans|title} ) }}
            {{ form_rest(delete_form) }}
            {{ form_end(delete_form) }}
            <a href="{{ path('vehicule') }}"  class="button">
               {{'form.add.retour'|trans|title}}
            </a>
            <a href="{{ path('vehicule_edit', { 'id': entity.id }) }}"  class="button">
               {{'word.table.action.edit'|trans|title}}
            </a>
        </div>
    </div>

{% endblock %}


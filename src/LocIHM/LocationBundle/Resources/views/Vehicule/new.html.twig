{% extends 'LocIHMLocationBundle:Admin:layout.html.twig' %}

{% block corps -%}

    <!-- Header -->
    <div class="row">
        <div class="small-5 columns">
          <h1> {{'titre.vehicule.new'|trans}} </h1>
        </div>
    </div>

    <div class="row">
        <div class="small-5 columns">
            {{ form_start(form) }}

                {{ form_errors(form) }}
                <div class="panel">
                    <div class="row">
                        <div class="small-12 columns">
                            {{ form_label(form.marque, 'word.table.vehicule.marque'|trans|title )  }}
                            {{ form_widget(form.marque) }}
                            {{ form_errors(form.marque) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="small-12 columns">
                            {{ form_label(form.modele, 'word.table.vehicule.modele'|trans|title ) }}
                            {{ form_widget(form.modele) }}
                            {{ form_errors(form.modele) }}
                        </div>
                    </div>

                   <div class="row">
                        <div class="small-12 columns">  
                            {{ form_label(form.puissance, 'word.table.vehicule.puissance'|trans|title ) }}
                            {{ form_widget(form.puissance) }}
                            {{ form_errors(form.puissance) }}                  
                        </div>
                    </div>

                    <div class="row">
                        <div class="small-12 columns">  
                            {{ form_label(form.couleur, 'word.table.vehicule.couleur'|trans|title ) }}
                            {{ form_widget(form.couleur) }}
                            {{ form_errors(form.couleur) }}                  
                        </div>
                    </div>

                    <div class="row">
                        <div class="small-12 columns">  
                            {{ form_label(form.prixJournalier, 'word.table.vehicule.prixjournalier'|trans|title ) }}
                            {{ form_widget(form.prixJournalier) }}
                            {{ form_errors(form.prixJournalier) }}                  
                        </div>
                    </div>

                    <div class="row">
                        <div class="small-12 columns">  
                            {{ form_label(form.typeVehicule, 'word.table.vehicule.typevehicule'|trans|title ) }}
                            {{ form_widget(form.typeVehicule) }}
                            {{ form_errors(form.typeVehicule) }}                  
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="small-12 columns">  
                            {{ form_label(form.agence, 'word.table.vehicule.agence'|trans|title ) }}
                            {{ form_widget(form.agence) }}
                            {{ form_errors(form.agence) }}                  
                        </div>
                    </div>                   

                   <div class="row">
                        <div class="small-12 columns">
                			{{ form_widget(form.submit, { 'label': 'form.valider'|trans|title }) }}
                        </div>
                    </div>

                {{ form_rest(form) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="row">
        <div class="small-12 columns">
        	<a href="{{ path('vehicule') }}"  class="button">
               {{'form.add.retour'|trans|title}}
            </a>
        </div>
    </div>

{% endblock %}

{% extends 'LocIHMLocationBundle:Admin:layout.html.twig' %}

{% block corps -%}

    <!-- Header -->
    <div class="row">
        <div class="small-12 columns">
          <h1> {{'titre.agence.menu'|trans|title}} </h1>
        </div>
    </div>

    <div class="row">
        <div class="small-12 columns">
            <table>
                <thead>
                    <tr>
                        <th>{{'word.table.id'|trans|title}}</th>
                        <th>{{'word.table.nom'|trans|title}}</th>
                        <th>{{'word.table.agence.adresse'|trans|title}}</th>
                        <th>{{'word.table.agence.coordonnees'|trans|title}}</th>
                        <th>{{'word.table.action.title'|trans|title}}</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('agence_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.nom }}</td>
                        <td>{{ entity.adresse }}</td>
                        <td>{{ entity.coordonnees }}</td>
                        <td>
                            <a href="{{ path('agence_show', { 'id': entity.id }) }}" class="button tiny">{{'word.table.action.show'|trans|title}}</a>
                            <a href="{{ path('agence_edit', { 'id': entity.id }) }}" class="button tiny">{{'word.table.action.edit'|trans|title}}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="small-12 columns">
            <a href="{{ path('agence_new') }}" class="button">
                {{'form.add.new.agence'|trans|title}}
            </a>
        </div>
    </div>

{% endblock %}

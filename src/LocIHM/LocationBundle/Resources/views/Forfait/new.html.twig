{% extends 'LocIHMLocationBundle:Admin:layout.html.twig' %}

{% block corps -%}

    <!-- Header -->
    <div class="row">
        <div class="small-5 columns">
          <h1> {{'titre.forfait.new'|trans}} </h1>
        </div>
    </div>

    <div class="row">
        <div class="small-5 columns">
            {{ form_start(form) }}

                {{ form_errors(form) }}
                <div class="panel">
                    <div class="row">
                        <div class="small-12 columns">
                    		{{ form_label(form.nom, 'word.table.nom'|trans|title )  }}
                			{{ form_widget(form.nom) }}
                			{{ form_errors(form.nom) }}
                		</div>
                	</div>

                    <div class="row">
                        <div class="small-12 columns">
                			{{ form_label(form.kminclus, 'word.table.forfait.kminclus'|trans|title ) }}
                			{{ form_widget(form.kminclus) }}
                			{{ form_errors(form.kminclus) }}
                		</div>
                	</div>

                   <div class="row">
                        <div class="small-12 columns">	
                			{{ form_label(form.prix, 'word.table.forfait.prix'|trans|title ) }}
                			{{ form_widget(form.prix) }}
                			{{ form_errors(form.prix) }}			   		 
                        </div>
                    </div>

                   <div class="row">
                        <div class="small-12 columns">
                			{{ form_widget(form.submit, { 'label': 'form.valider'|trans|title }) }}
                        </div>
                    </div>

                {{ form_rest(form) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="row">
        <div class="small-12 columns">
        	<a href="{{ path('forfait') }}"  class="button">
               {{'form.add.retour'|trans|title}}
            </a>
        </div>
    </div>

{% endblock %}

